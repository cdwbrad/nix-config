# Home Assistant Secrets File
# Copy this to /etc/homepage/keys/home-assistant-secrets.yaml
# and update with your actual values
#
# This file will be included in Home Assistant's configuration
# using !include_dir_merge_named for runtime secret injection

# Your actual location (keep private!)
latitude: 34.4208  # Replace with your actual latitude
longitude: -119.6982  # Replace with your actual longitude
elevation: 50  # Your elevation in meters

# API Keys
ecobee_api_key: your-ecobee-api-key
openweathermap_api_key: your-openweathermap-key  # Optional

# Z-Wave JS WebSocket URL
zwave_js_url: ws://172.31.0.201:3000

# ntfy notification server
ntfy_server: http://172.31.0.201:8093
ntfy_topic_alerts: home-alerts-x7k9m2p  # Use random string
ntfy_topic_water: water-sensors-a3n8k5q  # Use random string
ntfy_topic_security: door-sensors-p9m2n7x  # Use random string

# Homepage dashboard token
# Generate from Home Assistant: Profile -> Security -> Long-Lived Access Tokens
homepage_token: your-long-lived-access-token